{
  "format_on_save": "on",
  "languages": {
    "TypeScript": {
      "language_servers": ["deno", "!vtsls"],
      "formatter": "language_server"
    },
    "TSX": {
      "language_servers": ["deno", "!vtsls"],
      "formatter": "language_server"
    }
  },
  "lsp": {
